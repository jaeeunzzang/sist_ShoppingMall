<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.com.app.dto.ProductMapper">

	<sql id="product">
		SELECT
		P_NO,P_NAME,PRICE,INFO,CATEGORY,HIT,P_FILENAME,
		TO_CHAR(REGDATE,'YYYY/MM/DD')REGDATE FROM PRODUCT
	</sql>

	<select id="selectProduct" parameterType="java.lang.String"
		resultType="product">
		<include refid="product"></include>
		<where>
			ID=#{id}
		</where>
	</select>

	<insert id="insertProductAdmin" parameterType="product">
		INSERT INTO
		ADMINPRODUCT VALUES(#{id},ADMINPRODUCT_SEQ.NEXTVAL,
		#{productName},#{productPrice},#{productOrigin},#{productCategory},#{fileName},SYSDATE)
	</insert>

	<delete id="adminProductDelete" parameterType="product">
		DELETE FROM
		ADMINPRODUCT WHERE ID=#{id} AND PK=#{pk}
	</delete>

</mapper>
















