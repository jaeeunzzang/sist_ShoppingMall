<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.com.app.dto.MemberMapper">
	<select id="loginCheck" parameterType="member" resultType="String">
		SELECT M_ID FROM MEMBER WHERE M_ID=#{m_id} AND M_PW=#{m_pw}
	</select>
	
	<select id="idCheck" parameterType="String" resultType="Integer">
		SELECT COUNT(M_ID) FROM MEMBER WHERE M_ID=#{id}
	</select>
	
	<insert id="signUp" parameterType="member">
		INSERT INTO MEMBER VALUES(MEMBER_SEQ.NEXTVAL,#{m_id},#{m_name},#{m_pw},#{gender},
		#{birth},#{m_addr},#{hp},'WHITE',0,0,SYSDATE)
	</insert>
</mapper>